{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": "./src",
    "lib": [
      "es6", "dom", "es2015.promise", "es2016.array.include"
    ],
  },
  "include": ["./src/**/*.ts"]
}
